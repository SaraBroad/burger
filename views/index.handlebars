<div id="container">
    <div id="burger-image">
        <img src="/assets/img/burger.png">
    </div>
    <h1>Eat-Da-Burger</h1>
</div>

<div class="row">
    <div class="col-xs-6 text-center">
        <div class="row">
        {{#each burger}} {{#unless this.devoured}}
        <div class="col-xs-9">
            <p class="burger-box">{{this.id}} {{this.burger_name}}</p>
        </div>
         <div class="col-xs-3">
            <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn btn-primary devour-btn" type="submit">Devour It!</button>
            </form>
        </div>
        {{/unless}} {{/each}}
    </div>        
 </div>

    <div class="col-sm-6" class="devour-box">
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}} {{this.burger_name}}

        </li>
        {{/if}} {{/each}}
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <form action="/burgers" method="POST">
                <input type="text" class="form-control form-control-sm text-center" id="burger-name" name="burger-name">
                <br>
                <button type="submit" class="btn btn-primary burger-button">Submit</button>
            </form>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
</div>
<h3 style="text-align: center">Enter a burger you want to eat and click the "submit" button</h3>
</div>

